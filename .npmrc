# Force pnpm to use HTTPS instead of SSH for GitHub repositories
# This prevents "Host key verification failed" errors on Vercel
# pnpm will use HTTPS for all git+https:// URLs automatically

# Configure npm registry
registry=https://registry.npmjs.org/

# Network configuration for pnpm 10.x on Node 20
# Using minimal retries to fail fast if there's a real issue
fetch-retries=2
fetch-retry-mintimeout=5000
fetch-retry-maxtimeout=30000
fetch-timeout=60000

# Hoist dependencies to make them available to Next.js/Turbopack
# This is needed for Next.js 16 with Turbopack in pnpm workspaces
public-hoist-pattern[]=*react*
public-hoist-pattern[]=*react-dom*
public-hoist-pattern[]=*@swc/helpers*
shamefully-hoist=true

