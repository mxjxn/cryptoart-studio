{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["ponder/virtual"]
  },
  "include": [
    "ponder-env.d.ts",
    "ponder.config.ts",
    "ponder.schema.ts",
    "src/**/*.ts",
    "abis/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
