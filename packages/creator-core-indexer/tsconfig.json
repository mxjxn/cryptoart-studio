{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": false,
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

