{
  "name": "cryptoart-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=mvp",
    "dev": "concurrently \"turbo run dev --filter=mvp\" \"ngrok http 3000\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "check-types": "turbo run check-types",
    "db:generate": "cd packages/db && pnpm db:generate",
    "db:migrate": "cd packages/db && pnpm db:migrate",
    "db:migrate-all": "cd packages/db && pnpm db:migrate-all",
    "db:push": "cd packages/db && pnpm db:push",
    "db:studio": "cd packages/db && pnpm db:studio",
    "db:verify": "cd packages/db && pnpm db:verify",
    "services:start": "docker-compose up -d",
    "services:stop": "docker-compose stop",
    "services:down": "docker-compose down",
    "services:restart": "docker-compose restart",
    "services:logs": "docker-compose logs -f",
    "services:clean": "docker-compose down -v",
    "services:status": "docker-compose ps"
  },
  "dependencies": {
    "@mxjxn/lssvm-abis": "^0.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": "22.x"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "overrides": {
    "@types/react": "^19",
    "@types/react-dom": "^19"
  },
  "pnpm": {
    "overrides": {
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "@types/react": "^19",
      "@types/react-dom": "^19",
      "drizzle-orm": "^0.36.4"
    }
  }
}
